<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="?android:attr/selectableItemBackground">

    <data>

        <variable
            name="movie"
            type="com.moviedb.persistence.Movie" />
    </data>

    <androidx.cardview.widget.CardView
        android:id="@+id/card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_small"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/movie_image"
                android:layout_width="90dp"
                android:layout_height="135dp"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:adjustViewBounds="true"
                android:contentDescription="@{movie.title}"
                android:cropToPadding="true"
                android:scaleType="centerCrop"
                app:imageUrl="@{movie.poster_path}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1.0"
                tools:src="@drawable/ic_broken_image" />

            <TextView
                android:id="@+id/movie_release-date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginTop="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:textAppearance="@style/ContentTextAppearance"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/movie_image"
                app:layout_constraintTop_toTopOf="@+id/movie_image"
                app:yearReleased="@{movie.release_date}"
                tools:text="@tools:sample/date/ddmmyy" />

            <TextView
                android:id="@+id/movie_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="@{movie.title}"
                android:textAlignment="viewStart"
                android:textAppearance="@style/TitleTextAppearance"
                app:layout_constrainedWidth="true"
                app:layout_constraintBottom_toBottomOf="@+id/movie_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/movie_image"
                app:layout_constraintTop_toBottomOf="@+id/movie_release-date"
                app:layout_constraintVertical_bias="0.0"
                tools:text="@tools:sample/lorem[3]" />

            <TextView
                android:id="@+id/genre_list"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_normal"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:textAppearance="@style/ContentTextAppearance"
                app:layout_constraintBottom_toBottomOf="@id/movie_image"
                app:layout_constraintEnd_toStartOf="@id/star_score"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toEndOf="@+id/movie_image"
                app:layout_constraintTop_toBottomOf="@+id/movie_title"
                app:layout_constraintVertical_bias="0.0"
                tools:text="@tools:sample/lorem[3]" />

            <ImageView
                android:id="@+id/star_score"
                android:layout_width="0dp"
                android:layout_height="14dp"
                android:contentDescription="@string/star_score"
                android:src="@drawable/ic_star"
                app:layout_constraintBottom_toBottomOf="@+id/vote_score"
                app:layout_constraintEnd_toStartOf="@id/vote_score"
                app:layout_constraintTop_toTopOf="@+id/vote_score"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/vote_score"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/spacing_normal"
                android:text="@{movie.vote_average.toString()}"
                android:textAppearance="@style/ContentTextAppearance"
                app:layout_constraintBottom_toBottomOf="@id/movie_image"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="1"
                tools:text="1.0" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</layout>